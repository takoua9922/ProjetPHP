{% extends 'index.html.twig' %}

{% block meeting %}
    <div class="container mt-5" , style="background-color:powderblue;">
        <h1 class="text-center">Créer un compte</h1>

        {# Afficher les messages flash si présents #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {# Formulaire d'inscription #}
        <form method="post" class="mt-4">
            {{ form_start(registrationForm) }}

            {# Champ pour l'email #}
            <div class="mb-3">
                <label for="{{ registrationForm.email.vars.id }}" class="form-label text-danger">{{ form_label(registrationForm.email) }}</label>
                {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            {# Champ pour le mot de passe #}
            <div class="mb-3">
                <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label text-danger">{{ form_label(registrationForm.plainPassword) }}</label>
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            
            

            {# Champ pour le nom #}
            <div class="mb-3">
                <label for="{{ registrationForm.nom.vars.id }}" class="form-label text-danger">{{ form_label(registrationForm.nom) }}</label>
                {{ form_widget(registrationForm.nom, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            {# Champ pour le prénom #}
            <div class="mb-3">
                <label for="{{ registrationForm.prenom.vars.id }}" class="form-label text-danger">{{ form_label(registrationForm.prenom) }}</label>
                {{ form_widget(registrationForm.prenom, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

            {# Champ pour l'adresse #}
            <div class="mb-3">
                <label for="{{ registrationForm.adress.vars.id }}" class="form-label text-danger">{{ form_label(registrationForm.adress) }}</label>
                {{ form_widget(registrationForm.adress, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(registrationForm.adress) }}
            </div>

            {# Bouton de soumission #}
            <div class="mb-3">
                <button class="btn btn-primary w-100" type="submit">S'inscrire</button>
            </div>

            {{ form_end(registrationForm) }}
        </form>
    </div>
{% endblock %}
