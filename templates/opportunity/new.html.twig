{% extends 'index.html.twig' %}

{% block meeting %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Créer une nouvelle opportunité</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="mb-3">
                <label for="title" class="form-label">Type d'opportunité</label>
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="university" class="form-label">Université</label>
                {{ form_widget(form.university, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Pays</label>
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="createdAt" class="form-label">Date de création</label>
                {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div cclass="mb-3">
                
                <label for="createdBy" class="form-label">Créé par</label>
                {{ form_widget(form.createdBy, {'attr': {'class': 'form-control'}}) }}


            </div>

            <div class="d-flex justify-content-between">
                <button class="btn btn-primary">Ajouter</button>
                <a href="{{ path('app_opportunity_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
